<?xml version="1.0"?>
<robot name="pendulum">

  <link name="world"/>

  <link name="slideBar">
    <visual>
      <geometry>
        <box size="30 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
	<gazebo reference="slideBar">
        <material>Gazebo/Tertiary</material>
    </gazebo>

  <joint name="world_to_slideBar" type="fixed">
    <parent link="world"/>
    <child link="slideBar"/>
    <origin xyz="0.0 0.0 2.0"/>
  </joint>

  <link name="cart">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
	<gazebo reference="cart">
        <material>Gazebo/CoM</material>
  </gazebo>

  <joint name="base_to_plat" type="prismatic">
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 0.0 0.0"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <limit effort="100000.0" lower="-15" upper="15" velocity="100"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
    <transmission name="tran2">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="base_to_plat">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="planar_motor_2">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>
  <link name="pole1">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.5"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>
    </visual>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>
      <mass value="0.1"/>
      <inertia ixx="0.0000001" ixy="0.0" ixz="0.0" iyy="0.00208" iyz="0.0" izz="0.0000001"/>
    </inertial>
  </link>
	<gazebo reference="pole1">
        <material>Gazebo/Wood</material>
  </gazebo>

  <joint name="cart_to_pole1" type="revolute">
    <axis xyz="0 1 0"/>
    <origin xyz="0.0 0.0 0" rpy="0.0 0.0 0.0"/>
    <parent link="cart"/>
    <child link="pole1"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit effort="100000.0" lower="-3.14" upper="3.14" velocity="50"/>
  </joint>
    <transmission name="tran3">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="cart_to_pole1">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="rev_motor">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <!-- ROS Control Gazebo Plugin -->
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
       <jointName>cart_to_pole1</jointName>
       <updateRate>100.0</updateRate>
       <alwaysOn>true</alwaysOn>
    </plugin>

    <gazebo>
      <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
        <robotNamespace>/pendulum</robotNamespace>
      </plugin>
    </gazebo>

</robot>
